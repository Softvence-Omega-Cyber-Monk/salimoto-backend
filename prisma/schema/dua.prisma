enum languages {
  ENGLISH
  FRANCE
  SPANISH
}

model Dua {
  id        String   @id @default(uuid())
  audio     String
  arabic    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  categories Category[] @relation("DuaCategories")
  languages  Language[]
}

model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  image     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  duas Dua[] @relation("DuaCategories")
}

model Language {
  id           String    @id @default(uuid())
  name         languages @default(ENGLISH)
  content      String
  title        String
  duaReference String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  duaId String
  dua   Dua @relation(fields: [duaId], references: [id], onDelete: Cascade)
}
